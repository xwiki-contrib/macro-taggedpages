    <property>
      <code>{{velocity output="false"}}
#set ($tag = "$!wikimacro.parameters.tag")
#set ($parentSpace = "$!wikimacro.parameters.location")
#set ($cssClass = "$!wikimacro.parameters.cssClass")
#set ($limit = $!wikimacro.parameters.limit)
##
## Query
##
## Select
#set ($xwqlSelect = "select doc.title, doc.fullName")
## From
#set ($xwqlFrom = "from Document as doc, doc.object(XWiki.TagClass) as tag")
## Where
#set ($xwqlWhere = "where :tag member of tag.tags")
#if ("$!parentSpace" != '')
  #set ($xwqlWhere = "$xwqlWhere and (doc.space like :space or doc.space like :spaceGlob)")
#end
## Sort
#set ($sortMap = {
  "updateDate": { "property": "doc.date", "defaultOrder": "desc" },
  "creationDate": { "property": "doc.creationDate", "defaultOrder": "desc" },
  "title": { "property": "doc.title", "defaultOrder": "asc" }
})
#set ($parameterSortBy = "$!wikimacro.parameters.sortBy")
#set ($parameterSortOrder = "$!wikimacro.parameters.sortOrder")
#set ($sortMapObject = $sortMap[$parameterSortBy])
#set ($sortBy = $sortMapObject.property)
#if ("$!parameterSortOrder" != '')
  #set ($sortOrder = $parameterSortOrder)
#else
  #set ($sortOrder = $sortMapObject.defaultOrder)
#end
#set ($xwqlOrderBy = "order by $sortBy $sortOrder")
## Bind values
#set ($query = $services.query.xwql("$xwqlSelect $xwqlFrom $xwqlWhere $xwqlOrderBy"))
$query.bindValue("tag", $tag)
#if ("$!parentSpace" != '')
$query.bindValues({
  "space": $parentSpace,
  "spaceGlob": "${parentSpace}.%"
})
#end
## Limit
#if ("$!limit" != '')
  $query.setLimit($limit)
#end
## Execute
#set ($documentsResult = $query.execute())
{{/velocity}}

{{velocity}}
##
## Display
##
#if ($documentsResult.size() &gt; 0)
  (%class='taggedpages-list $services.rendering.escape($!cssClass)'%)
  #foreach ($documentResult in $documentsResult)
    #set ($documentTitle = $documentResult[0])
    #set ($documentFullName = $documentResult[1])
    #set ($documentTitleEscaped = $services.rendering.escape($services.rendering.escape($documentTitle, $wikimacro.doc.syntax), $wikimacro.doc.syntax))
    * [[$documentTitleEscaped&gt;&gt;$services.rendering.escape($documentFullName, $wikimacro.doc.syntax)]]
  #end
#end
{{/velocity}}
</code>
